[colors]

background = #2f343f
background-alt = #4f545f
foreground = #d8dee8
foreground-alt = #787e68
accent = #81a1c1
alert = #ebcb8b


[bar/top]

monitor = eDP-1
height = 48
fixed-center = true
background = ${colors.background}
foreground = ${colors.foreground}
padding-left = 4
padding-right = 4
module-margin-left = 2
module-margin-right = 2
font-0 = Noto Sans:size=16
font-1 = Font Awesome:size=16
;tray-position = right
;tray-padding = 2
;tray-background = ${colors.background}
wm-restack = bspwm
modules-left = bspwm
modules-center = xwindow
modules-right = wlan alsa avg-battery date


[module/bspwm]

type = internal/bspwm
label-focused = %name%
label-focused-background= ${colors.background-alt}
label-focused-padding = 3
label-occupied = %name%
label-occupied-padding = 3
label-occupied-foreground= ${colors.foreground}
label-urgent = %name%
label-urgent-background = ${colors.alert}
label-urgent-padding = 3
label-empty = %name%
label-empty-foreground = ${colors.foreground-alt}
label-empty-padding = 3


[module/xwindow]

type = internal/xwindow
label = %title:0:100:...%


[module/mpd]

type = internal/mpd
;format-online = <icon-prev>  <label-time>  <label-song>  <icon-next>
format-online = <toggle>  <label-song>
;format-online = <label-time>  <label-song>
;icon-prev = 
;icon-next = 
icon-play = 
icon-pause = 
;icon-prev-foreground = ${colors.accent}
;icon-next-foreground = ${colors.accent}
icon-pause-foreground = ${colors.accent}
label-song-maxlen = 45
label-song-ellipsis = true


[module/wlan]

type = internal/network
interface = wlp4s0
interval = 15
format-connected = <ramp-signal>  <label-connected>
label-connected = %essid%
format-disconnected = <label-disconnected>
label-disconnected =   Disconnected
label-disconnected-foreground = ${colors.foreground-alt}
ramp-signal-0 =  
ramp-signal-1 =  
ramp-signal-2 =  
ramp-signal-3 =  
ramp-signal-4 =  
ramp-signal-5 =  
ramp-signal-foreground = ${colors.accent}



[module/alsa]

type = internal/alsa
format-volume = <label-volume> <bar-volume>
label-volume = " "
label-volume-foreground = ${colors.accent}
format-muted-prefix = " "
format-muted-foreground = ${colors.accent}
label-muted = Muted
label-muted-foreground= ${colors.foreground-alt}
bar-volume-width = 6
bar-volume-indicator = 
bar-volume-fill = ─
bar-volume-empty = ─
bar-volume-empty-foreground = ${colors.foreground-alt}


[module/avg-battery]
type = custom/script
exec = "count=$(acpi -b | wc -l); sum=$(acpi -b | egrep -o '[0-9]{1,3}%' | tr -d '%' | xargs -I% echo -n '+%'); echo Avg capacity: $(( sum / count ))%" 
interval = 5


[module/date]

type = internal/date
interval = 30
label = " %date% %time%"
date =
date-alt = %a %d
time = %H:%M
time-alt = 
format-prefix = 
format-prefix-foreground = ${colors.accent}
